<Window x:Class="Dimmer_Labels_Wizard_WPF.TemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dimmer_Labels_Wizard_WPF"
        mc:Ignorable="d"
        Title="TemplateEditor" Height="750" Width="1010">

    <Window.DataContext>
        <local:TemplateEditorViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="ExpanderBackground" Color="#FF333337"/>
        <SolidColorBrush x:Key="ExpanderText" Color="White"/>
        <SolidColorBrush x:Key="ControlGridBackground" Color="#FD1E1E1E"/>
        <SolidColorBrush x:Key="ControlLabelTextColor" Color="White"/>
    </Window.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Template Manager"
               Style="{StaticResource WindowHeaderStyle}" Foreground="White"/>
        <Border BorderBrush="Gray" Background="White" BorderThickness="1" Grid.Row="1" Margin="5">
            <local:LabelStrip Margin="0,10,0,10"
                DataSource="{Binding Path=ExampleUnits}" Style="{Binding Path=DisplayedTemplate}">

                <local:LabelStrip.LayoutTransform>
                    <ScaleTransform CenterX="0" CenterY="0" ScaleX="1" ScaleY="1"/>
                </local:LabelStrip.LayoutTransform>
            </local:LabelStrip>
        </Border>

        <Border Grid.Row="2" Margin="5">
            <Expander x:Name="expander" IsExpanded="true" Header="Strip Template Settings" HorizontalAlignment="Stretch"  VerticalAlignment="Top"
                       Background="{StaticResource ExpanderBackground}" Foreground="{StaticResource ExpanderText}">
                <Grid Background="{StaticResource ControlGridBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0 -->
                    <Label x:Name="label1" Content="Name" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                           Foreground="{StaticResource ControlLabelTextColor}"/>
                    <TextBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"
                             Text="{Binding Path=TemplateName}"/>

                    <!-- Row 1-->
                    <Label Content="Based On" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"
                           Foreground="{StaticResource ControlLabelTextColor}"/>
                    <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"
                              ItemsSource="{Binding Path=BasedOnTemplates}" SelectedItem="{Binding Path=BasedOnTemplateSelection}"/>

                    <!-- Row 2 -->
                    <Label x:Name="label2" Content="Strip Width (mm)" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                           Foreground="{StaticResource ControlLabelTextColor}"/>
                    <TextBox Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"
                             Text="{Binding Path=StripWidth}"/>

                    <!-- Row 3-->
                    <Label x:Name="label4" Content="Strip Height (mm)" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"
                           Foreground="{StaticResource ControlLabelTextColor}"/>
                    <TextBox Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1"
                             Text="{Binding Path=StripHeight}"/>

                    <!-- Row 4 -->
                    <Label x:Name="label5" Content="Strip Mode" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"
                           Foreground="{StaticResource ControlLabelTextColor}"/>
                    <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1"
                               ItemsSource="{Binding Path=StripModes}" SelectedItem="{Binding Path=SelectedStripMode}"/>

                    <!-- Row 5 -->
                    <Expander Header="Upper Cell Template Settings" IsExpanded="true" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                              Background="{StaticResource ExpanderBackground}" Foreground="{StaticResource ExpanderText}">
                        <Grid Background="{StaticResource ControlGridBackground}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0 -->
                            <Label Content="Data Display Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding Path=CellDataModes}" SelectedItem="{Binding Path=SelectedUpperCellDataMode}"/>

                            <!-- Row 2 -->
                            <Label Content="Row Height Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding Path=RowHeightModes}" SelectedItem="{Binding Path=SelectedUpperRowHeightMode}"
                                      IsEnabled="{Binding Path=UpperSingleFieldModeEnabled, Converter={StaticResource BooleanFlipValueConverter}}"/>

                            <!-- Row 3 -->
                            <Label Content="Single Field Font" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="3" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <local:FontSelector Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Tag="Left"
                                                SelectedFont="{Binding Path=UpperSingleFieldFont}" IsEnabled="{Binding Path=UpperSingleFieldModeEnabled}"/>

                            <!-- Row 4 -->
                            <Label Content="Single Field Font Size" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" IsEditable="true" IsSynchronizedWithCurrentItem="False"
                                      ItemsSource="{Binding Source={StaticResource StandardFontSizes}}" SelectedItem="{Binding Path=UpperSingleFieldFontSize}"
                                      IsEnabled="{Binding Path=UpperSingleFieldModeEnabled}"/>

                            <!-- Row 5 -->
                            <Label Content="Single Field Label Field" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1"
                                      SelectedItem="{Binding Path=UpperSingleFieldDataField}" ItemsSource="{Binding Path=LabelFields}"
                                      IsEnabled="{Binding Path=UpperSingleFieldModeEnabled}"/>

                            <!-- Row 6 -->
                            <Expander Header="Row Template Settings" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                      IsExpanded="{Binding Path=UpperSingleFieldModeEnabled, Converter={StaticResource BooleanFlipValueConverter}, Mode=OneWay}"
                                      Background="{StaticResource ExpanderBackground}" Foreground="{StaticResource ExpanderText}">
                                <Grid Background="{StaticResource ControlGridBackground}"
                                      IsEnabled="True">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="129*"/>
                                        <ColumnDefinition Width="57*"/>
                                        <ColumnDefinition Width="72*"/>
                                        <ColumnDefinition Width="233*"/>
                                    </Grid.ColumnDefinitions>

                                    <ListBox x:Name="UpperRowTemplatesListBox" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Margin="5"
                                              ItemsSource="{Binding Path=UpperRowTemplates}" SelectedItem="{Binding Path=SelectedUpperRowTemplate}"/>

                                    <!-- Row 0 -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Button Content="+" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"
                                                Command="{Binding Path=AddUpperRowTemplateCommand}"/>
                                        <Button Content="-" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"
                                                Command="{Binding Path=RemoveUpperRowTemplateCommand}"/>
                                    </StackPanel>
                                    <Label Content="Font" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2"
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <local:FontSelector HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="3"
                                                        SelectedFont="{Binding Path=SelectedUpperRowFont}"/>


                                    <!-- Row 1 -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Button Content="^" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"
                                                Command="{Binding Path=MoveUpperRowTemplateUpCommand}" />
                                        <Button Content="V" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"
                                                Command="{Binding Path=MoveUpperRowTemplateDownCommand}"/>
                                    </StackPanel>
                                    <Label Content="Font Size" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2"
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <ComboBox Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" IsEditable="True" IsSynchronizedWithCurrentItem="False"
                                              ItemsSource="{Binding Source={StaticResource StandardFontSizes}}" SelectedItem="{Binding Path=SelectedUpperRowFontSize}" />

                                    <!-- Row 2 -->
                                    <Label Content="Label Field" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" 
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" 
                                              ItemsSource="{Binding Path=LabelFields}" SelectedItem="{Binding Path=SelectedUpperRowDataField}"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Expander>

                    <Expander Header="Lower Cell Template Settings" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                              Background="{StaticResource ExpanderBackground}" Foreground="{StaticResource ExpanderText}">
                        <Grid Background="{StaticResource ControlGridBackground}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0 -->
                            <Label Content="Data Display Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"/>

                            <!-- Row 2 -->
                            <Label Content="Row Height Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"/>

                            <!-- Row 3 -->
                            <Label Content="Single Field Font" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <local:FontSelector Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Tag="Right"/>

                            <!-- Row 4 -->
                            <Label Content="Single Field Font Size" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="40" HorizontalAlignment="Left" IsEditable="True" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1"/>

                            <!-- Row 5 -->
                            <Label Content="Single Field Label Field" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"
                                   Foreground="{StaticResource ControlLabelTextColor}"/>
                            <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1"/>

                            <!-- Row 6 -->
                            <Expander Header="Row Template Settings" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                      Background="{StaticResource ExpanderBackground}" Foreground="{StaticResource ExpanderText}">
                                <Grid Background="{StaticResource ControlGridBackground}"
                                      IsEnabled="True">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="154*"/>
                                        <ColumnDefinition Width="55*"/>
                                        <ColumnDefinition Width="84*"/>
                                        <ColumnDefinition Width="173*"/>
                                    </Grid.ColumnDefinitions>

                                    <ListBox  Grid.Row="0" Grid.RowSpan="3" Height="75" Grid.Column="0" Margin="5"/>

                                    <!-- Row 0 -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Button Content="+" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"/>
                                        <Button Content="-" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Label Content="Font" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Height="26" Width="34"
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="3" Height="22" Margin="0,2"/>

                                    <!-- Row 1 -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Button Content="^" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"/>
                                        <Button Content="V" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Label Content="Font Size" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Height="26" Width="58"
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <TextBox Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" Height="18" Margin="0,4"/>

                                    <!-- Row 2 -->
                                    <Label Content="Label Field" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Height="26" Width="66"
                                           Foreground="{StaticResource ControlLabelTextColor}"/>
                                    <ComboBox Width="135" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" Height="22" Margin="0,2"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Expander>
                </Grid>
            </Expander>
        </Border>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Bottom" Margin="5" Width="75"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Bottom" Margin="0,0,85,5" Width="75"/>

    </Grid>
</Window>
