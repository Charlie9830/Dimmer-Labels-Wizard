<Window x:Class="Dimmer_Labels_Wizard_WPF.GlobalApplyWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dimmer_Labels_Wizard_WPF"
             mc:Ignorable="d" Width="412.017" Height="206.008">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="89" Width="384" Text="You have toggled Global Style Apply on for this Control Panel. Style and Formatting changes you make will now be applied to All Labels." FontSize="16"/>
        <CheckBox x:Name="ShowAgainCheckBox" Content="Do not show me this message again." HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="384" Text="Global Style Apply Toggle" FontSize="21.333"/>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="319,144,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>

    </Grid>
</Window>
